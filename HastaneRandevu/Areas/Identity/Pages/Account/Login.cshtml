@page
@model LoginModel

@{
    ViewData["Title"] = "Admin Paneli";
}

<!-- Tüm sayfayı kapsayan, dikey ve yatay ortalayan div -->
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="row w-100 justify-content-center">
        <div class="col-md-6 col-lg-4 text-center">

            <!-- Hoş Geldiniz Başlığı -->
            <h2 class="mb-2">Hoş Geldiniz!</h2>
            <h1 class="mb-4">@ViewData["Title"]</h1>

            <section>
                <form id="account" method="post">
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="ornek@eposta.com" />
                        <label asp-for="Input.Email">E-posta</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Şifre" />
                        <label asp-for="Input.Password">Şifre</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3 text-start">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Giriş Yap</button>

                    <div class="mt-3 text-start">
                        <p><a id="forgot-password" asp-page="./ForgotPassword">Şifrenizi mi unuttunuz?</a></p>
                        <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Yeni Hesap Oluştur</a></p>
                        <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">E-posta Onayını Yeniden Gönder</a></p>
                    </div>
                </form>
            </section>

            <!-- Harici giriş -->
            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <section class="mt-4 text-center">
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <p>Harici bir hizmetle giriş yapın:</p>
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-secondary m-1" name="provider" value="@provider.Name"
                                    title="@provider.DisplayName hesabınızı kullanarak giriş yapın">
                                @provider.DisplayName ile Giriş Yap
                            </button>
                        }
                    </form>
                </section>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

