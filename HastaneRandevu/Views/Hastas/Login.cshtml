@model HastaneRandevu.Models.Hasta
@{
    ViewData["Title"] = "Hasta Giriş";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body, html {
            height: 100%;
            margin: 0;
        }

        .left-panel {
            background-color: #f5e6c8;
            padding: 40px;
        }

        .right-panel {
            background: url('https://www.mhrs.gov.tr/Vatandas/assets/img/neyimvar-bg.webp') no-repeat center center;
            background-size: cover;
            position: relative;
        }

        .right-overlay {
            background-color: rgba(0, 0, 0, 0.4);
            height: 100%;
            width: 100%;
            position: absolute;
            top: 0;
            left: 0;
        }

        .right-content {
            position: relative;
            z-index: 2;
            padding: 50px;
            color: white;
        }

        .custom-card {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
<body>
    <div class="container-fluid h-100">
        <div class="row h-100">
            <!-- Sol Panel -->
            <div class="col-md-6 d-flex align-items-center justify-content-center left-panel">
                <div class="w-75 custom-card">
                    <h2 class="mb-4 text-center">Hasta Giriş</h2>

                    @if (ViewData["LoginError"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewData["LoginError"]
                        </div>
                    }

                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label asp-for="TCKimlikNo" class="form-label">TC Kimlik No</label>
                            <input asp-for="TCKimlikNo" class="form-control" placeholder="TC Kimlik No" />
                            <span asp-validation-for="TCKimlikNo" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Parola" class="form-label">Parola</label>
                            <input asp-for="Parola" class="form-control" placeholder="Parola" />
                            <span asp-validation-for="Parola" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
                    </form>

                    <div class="text-center mt-2">
                        <a href="/Hastas/SifremiUnuttum">Şifremi Unuttum?</a>
                    </div>

                    <div class="text-center my-3">- VEYA -</div>
                    <div class="d-grid gap-2 mb-2">
                        <button class="btn" type="button" style="background-color: #e11a22; color: #fff; font-weight:600;">
                            <img src="~/images/png.png" alt="e-Devlet" style="height:24px; margin-right:8px; vertical-align:middle;" />
                            e-Devlet ile Giriş Yap
                        </button>
                    </div>
                </div>
            </div>

            <!-- Sağ Panel -->
            <div class="col-md-6 d-none d-md-block right-panel">
                <img src="~/images/yeni.jpg" alt="Tanıtım Görseli" class="img-fluid mb-3" style="max-width: 600px;">
                <div class="right-overlay"></div>
                <div class="right-content">
                    <h1 class="fw-bold">NeyimVar?</h1>
                    <p>Şikayetlerinizi girerek muhtemel tanınızı ve gideceğiniz polikliniği öğrenerek randevu almak ister misiniz?</p>
                </div>
            </div>
        </div>
    </div>

    <footer class="text-center mt-4 text-muted">
        <small>
            Copyright &copy; 2004-2025&nbsp;
            <a href="https://adminlte.io" class="text-decoration-none">X Hastanesi</a>.
            Tüm hakları saklıdır.
        </small>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>