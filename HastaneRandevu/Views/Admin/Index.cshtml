@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Admin Panel";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Admin Paneli</h1>
            </div>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <p>Bu sayfaya yalnızca Admin rolündeki kullanıcılar erişebilir.</p>
        
        <div class="col-lg-6">

            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h5 class="m-0">Mail Denemesi</h5>
                </div>
                <div class="card-body">


                    <div class="form-group">
                        <label for="toEmail">Mail Alıcısı</label>
                        <input type="text" name="toEmail" id="toEmail" class="form-control mb-3" placeholder="Mail Alıcısı">
                    </div>

                    <div class="form-group">
                        <label for="subject">Mail Başlığı</label>
                        <input type="text" name="subject" id="subject" class="form-control mb-3" placeholder="Mail Başlığı">
                    </div>

                    <div class="form-group">
                        <label for="message">Mail İçeriği</label>
                        <textarea name="message" id="message" class="form-control mb-3" placeholder="Mail İçeriği"></textarea>
                    </div>


                    <p class="card-text">Mail gönderme sistemini kontrol amaçlıdır.</p>

                    <button id="sendMailButton" class="btn btn-primary" data-url="@Url.Action("SendEmail", "Admin")">Send Mail</button>
                </div>
            </div>

        </div>


    </div>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(function () {
            $('#sendMailButton').click(function () {
                var mailData = {
                    toEmail: $('#toEmail').val(),
                    subject: $('#subject').val(),
                    message: $('#message').val()
                };

                $.ajax({
                    url: $(this).data('url'),
                    type: 'POST',
                    data: mailData,
                    success: function (result) {
                        // clean fields
                        $('#toEmail').val('');
                        $('#subject').val('');
                        $('#message').val('');
                        if(result && result.toastType && result.toastMessage) {
                            Swal.fire({
                                icon: result.toastType,
                                title: result.toastType === 'success' ? 'Başarılı' : 'Hata',
                                text: result.toastMessage
                            });
                        }
                    },
                    error: function (xhr, status, error) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Hata',
                            text: 'Mail gönderilemedi!'
                        });
                    }
                });
            });
        });
    </script>
}

