@model HastaneRandevu.Models.Hasta

@{
    ViewData["Title"] = "Hasta Düzenle";
}

<h2>Hasta Düzenle</h2>

<form asp-action="HastaDuzenle" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="AdSoyadi"></label>
        <input asp-for="AdSoyadi" class="form-control" />
        <span asp-validation-for="AdSoyadi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TCKimlikNo"></label>
        <input asp-for="TCKimlikNo" class="form-control" />
        <span asp-validation-for="TCKimlikNo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Parola"></label>
        <input asp-for="Parola" class="form-control" />
        <span asp-validation-for="Parola" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="HastaListesi" class="btn btn-secondary">İptal</a>
</form>
