@model HastaneRandevu.Models.Randevu
<style>
    body {
        background: #b7986b; /* Koyu kahve */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    .container {
        background: #f5e6c8;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }
</style>
@{
    ViewData["Title"] = "Randevu Oluştur";
}

<h1>Randevu Oluştur</h1>

<h4>Yeni Randevu Talebi</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PoliklinikId" class="control-label">Poliklinik</label>
                <select asp-for="PoliklinikId" class="form-control" asp-items="ViewBag.PoliklinikId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DoktorId" class="control-label">Doktor</label>
                <select asp-for="DoktorId" class="form-control" asp-items="ViewBag.DoktorId"></select>
            </div>
            
            <!-- Giriş yapan hastanın ID'sini gizli alan olarak ekle -->
            <input type="hidden" asp-for="HastaId" value="@ViewBag.HastaId" />
            
            <div class="form-group">
                <label asp-for="RandevuSaati" class="control-label">Randevu Saati</label>
                <input asp-for="RandevuSaati" class="form-control" type="datetime-local" />
                <span asp-validation-for="RandevuSaati" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Randevu Oluştur" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="HastaRandevulari" asp-route-hastaId="@ViewBag.HastaId">Randevularıma Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
