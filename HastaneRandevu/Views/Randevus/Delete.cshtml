@model HastaneRandevu.Models.Randevu

@{
    ViewData["Title"] = "Randevu İptal Et";
}

<h1>Randevu İptal Et</h1>

<h3>Bu randevuyu iptal etmek istediğinize emin misiniz?</h3>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Poliklinik</dt>
        <dd class="col-sm-10">@Model.Poliklinik.PoliklinikAdi</dd>

        <dt class="col-sm-2">Doktor</dt>
        <dd class="col-sm-10">@Model.Doktor.Ad</dd>

        <dt class="col-sm-2">Randevu Saati</dt>
        <dd class="col-sm-10">@Model.RandevuSaati.ToString("dd.MM.yyyy HH:mm")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">İptal et</button>
        <a asp-action="HastaRandevulari" asp-route-hastaId="@Model.HastaId" class="btn btn-secondary">Vazgeç</a>
    </form>
</div>
