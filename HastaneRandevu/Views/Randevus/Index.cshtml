@model IEnumerable<HastaneRandevu.Models.Randevu>

<style>
    body {
        background: #F9F9F9; /* Çok açık gri, modern sade arka plan */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    .container {
        background: white; /* Düz beyaz içerik kutusu */
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08); /* Daha yumuşak gölge */
    }

    .card {
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        background-color: #f5e6c8; /* Koyu krem */
        border-radius: 8px;
        overflow: hidden;
    }

    .table th, .table td {
        padding: 12px;
        text-align: left;
        border-top: 1px solid #b7986b; /* Koyu kahve */
    }

    .table th {
        background-color: #b7986b; /* Koyu kahve başlık */
        color: #3e2f1c; /* Koyu kahverengi yazı */
        font-weight: 600;
    }

    .table tr:nth-child(even) {
        background-color: #f5e6c8; /* Koyu krem */
    }

    .table tr:nth-child(odd) {
        background-color: #fffbe6; /* Açık krem */
    }

    .table tr:hover {
        background-color: #ecd9b0; /* Hover: daha açık krem */
    }

    .table a {
        color: #3e2f1c; /* Koyu kahverengi */
        text-decoration: none;
        font-weight: 600;
    }

    .table a:hover {
        text-decoration: underline;
        color: #5a4420;
    }
</style>

<h1 class="mb-3">Randevular</h1>

<div class="row Randevular">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Yaklaşan Randevular</h5>
                <p class="card-text">Hastaların, doktorların ve polikliniklerin bilgilerini içeren yaklaşan randevuları görüntüleyebilirsiniz.</p>
                <a href="#" class="card-link">Detayları Görüntüle</a>
            </div>
        </div>
    </div>
</div>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="container">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Poliklinik)</th>
                <th>@Html.DisplayNameFor(model => model.Doktor)</th>
                <th>@Html.DisplayNameFor(model => model.Hasta)</th>
                <th>@Html.DisplayNameFor(model => model.RandevuSaati)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Poliklinik.PoliklinikAdi)</td>
                    <td>@Html.DisplayFor(modelItem => item.Doktor.Ad)</td>
                    <td>@Html.DisplayFor(modelItem => item.Hasta.AdSoyadi)</td>
                    <td>@Html.DisplayFor(modelItem => item.RandevuSaati)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Detay</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
