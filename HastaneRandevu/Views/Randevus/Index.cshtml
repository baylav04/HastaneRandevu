@model IEnumerable<HastaneRandevu.Models.Randevu>

<style>
    body {
        background: #F9F9F9;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    .container {
        width: 90%;
        margin: 40px auto;
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
        text-align: center;
        box-sizing: border-box;
    }

    h1 {
        margin-bottom: 20px;
        color: #2c3e50;
    }

    table.table {
        width: 100%;
        margin: 0 auto;
        border-collapse: collapse;
    }

    table th, table td {
        border: 1px solid #ddd;
        padding: 10px;
    }

    table th {
        background-color: #f2f2f2;
        color: #333;
    }

    table tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    .btn {
        padding: 6px 10px;
        font-size: 14px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
        margin: 2px;
        display: inline-block;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

    .btn:hover {
        opacity: 0.9;
    }
</style>

<h1 class="mb-3">Randevular</h1>

<div class="row Randevular">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Yaklaşan Randevular</h5>
                <p class="card-text">Hastaların, doktorların ve polikliniklerin bilgilerini içeren yaklaşan randevuları görüntüleyebilirsiniz.</p>
                <a href="#" class="card-link">Detayları Görüntüle</a>
            </div>
        </div>
    </div>
</div>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="container">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Poliklinik)</th>
                <th>@Html.DisplayNameFor(model => model.Doktor)</th>
                <th>@Html.DisplayNameFor(model => model.Hasta)</th>
                <th>@Html.DisplayNameFor(model => model.RandevuSaati)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Poliklinik.PoliklinikAdi)</td>
                    <td>@Html.DisplayFor(modelItem => item.Doktor.Ad)</td>
                    <td>@Html.DisplayFor(modelItem => item.Hasta.AdSoyadi)</td>
                    <td>@Html.DisplayFor(modelItem => item.RandevuSaati)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Detay</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
