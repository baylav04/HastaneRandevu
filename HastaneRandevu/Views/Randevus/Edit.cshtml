@model HastaneRandevu.Models.Randevu

@{
    ViewData["Title"] = "Düzenle";
}

<h1>Düzenle</h1>

<h4>Randevu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PoliklinikId" class="control-label"></label>
                <select asp-for="PoliklinikId" class="form-control" asp-items="ViewBag.PoliklinikId"></select>
                <span asp-validation-for="PoliklinikId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoktorId" class="control-label"></label>
                <select asp-for="DoktorId" class="form-control" asp-items="ViewBag.DoktorId"></select>
                <span asp-validation-for="DoktorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RandevuSaati" class="control-label"></label>
                <input asp-for="RandevuSaati" class="form-control" />
                <span asp-validation-for="RandevuSaati" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $('#PoliklinikId').change(function () {
                var poliklinikId = $(this).val();
                if (poliklinikId) {
                    $.ajax({
                        url: '/Randevus/DoktorGetir?poliklinikId=' + poliklinikId,
                        type: 'GET',
                        success: function (data) {
                            var doktorSelect = $('#DoktorId');
                            doktorSelect.empty();
                            $.each(data, function (i, doktor) {
                                doktorSelect.append($('<option>', {
                                    value: doktor.id,
                                    text: doktor.ad
                                }));
                            });
                        }
                    });
                }
            });

            // Sayfa yüklendiğinde mevcut poliklinik'e göre doktorları getir
            var selectedPoliklinik = $('#PoliklinikId').val();
            if (selectedPoliklinik) {
                $('#PoliklinikId').trigger('change');
            }
        });
    </script>
}
