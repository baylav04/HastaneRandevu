@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HastaneRandevu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HastaneRandevu.styles.css" asp-append-version="true" />
</head>
<body class="logged-in">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="@Url.Content("~/images/saglik.png")" alt="Logo" style="height: 60px; margin-right: 20px;" />
                    HastaneRandevu
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Doktors" asp-action="Index">Doktorlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Polikliniks" asp-action="Index">Poliklinikler</a>
                        </li>
                        @if (HttpContextAccessor.HttpContext.Session.GetInt32("LoggedInHastaId") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Randevus" asp-action="HastaRandevulari" asp-route-hastaId="@HttpContextAccessor.HttpContext.Session.GetInt32("LoggedInHastaId")">Randevularım</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Randevus" asp-action="Create">Randevu Al</a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Index">Admin Paneli</a>
                            </li>
                        }
                    </ul>

                    <div class="d-flex">
                        @if (HttpContextAccessor.HttpContext.Session.GetInt32("LoggedInHastaId") != null)
                        {
                            <div class="user-info me-3">
                                <span>@HttpContextAccessor.HttpContext.Session.GetString("LoggedInHastaName")</span>
                            </div>
                            <a class="btn btn-outline-secondary btn-sm" asp-controller="Hastas" asp-action="Logout">Çıkış Yap</a>
                        }
                        else
                        {
                            <a class="btn btn-outline-primary btn-sm me-2" asp-controller="Hastas" asp-action="Login">Giriş Yap</a>
                            <a class="btn btn-primary btn-sm" asp-controller="Hastas" asp-action="Create">Kayıt Ol</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
        <partial name="_LoginPartial" />
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


