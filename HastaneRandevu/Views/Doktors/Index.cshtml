@model IEnumerable<HastaneRandevu.Models.Doktor>

<style>
    body {
        background: #b7986b; /* Koyu kahve */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    .container {
        background: #f5e6c8;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        background-color: #f5e6c8; /* Koyu krem */
        border-radius: 8px;
        overflow: hidden;
        margin: 0 auto; /* Tablonun ortalanması için eklendi */
    }

        .table th, .table td {
            padding: 12px;
            text-align: left;
            border-top: 1px solid #b7986b; /* Koyu kahve */
        }

        .table th {
            background-color: #b7986b; /* Koyu kahve başlık */
            color: #3e2f1c; /* Koyu kahverengi yazı */
            font-weight: 600;
        }

        .table tr:nth-child(even) {
            background-color: #f5e6c8; /* Koyu krem */
        }

        .table tr:nth-child(odd) {
            background-color: #fffbe6; /* Açık krem */
        }

        .table tr:hover {
            background-color: #ecd9b0; /* Hover: daha açık krem */
        }

        .table a {
            color: #3e2f1c; /* Koyu kahverengi */
            text-decoration: none;
            font-weight: 600;
        }

            .table a:hover {
                text-decoration: underline;
                color: #5a4420;
            }

    h1 {
        color: #3e2f1c;
        text-align: center;
    }
</style>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p style="text-align: center;">
    <a asp-action="Create">Yeni Doktor Ekle</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Poliklinik)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Poliklinik.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detay</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

